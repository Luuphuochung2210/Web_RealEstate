@model HomeModel

@{
    ViewData["Title"] = "Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--/ Intro Single start /-->
<section class="intro-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">Our Amazing Properties</h1>
                    <span class="color-text-a">Grid Properties</span>
                </div>
            </div>

            <div class="col-md-12 col-lg-4">
                <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-area="" asp-controller="Home" asp-action="AllProperties">All Properties</a>
                        </li>
                        <li class="breadcrumb-item">
                            Project
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!--/ Intro Single End /-->
<!--/ Property Grid Star /-->
<section class="property-grid grid">
    <div class="container">
        <div class="row">
            @foreach (var obj in Model.MyPost)
            {
                @if (obj.RealEstate.CategoryId == 2)
                {
                    <div class="col-md-4">
                        <div class="card-box-a card-shadow">
                            <div class="img-box-a">
                                <img src="~/img/@obj.RealEstate.Image" alt="" class="img-a img-fluid">
                            </div>

                            <div class="card-overlay">
                                <div class="card-overlay-a-content">
                                    <div class="card-header-a">
                                        <h2 class="card-title-a">
                                            <span>@obj.RealEstate.Name</span>
                                        </h2>
                                    </div>

                                    <div class="card-body-a">
                                        <div class="price-box d-flex">
                                            <span class="price-a">@obj.RealEstate.Price</span>
                                        </div>
                                        <a asp-area="" asp-controller="Home" asp-action="Detail" asp-route-id="@obj.RealEstate.Id" class="link-a">
                                            Click here to view
                                            <span class="ion-ios-arrow-forward"></span>
                                        </a>
                                    </div>

                                    <div class="card-footer-a">
                                        <ul class="card-info d-flex justify-content-around">
                                            <li>
                                                <h4 class="card-info-title">Area</h4>
                                                <span> @obj.RealEstate.DienTich</span>
                                            </li>

                                            <li>
                                                <h4 class="card-info-title">Type</h4>
                                                <span>@obj.RealEstate.Category.Name</span>
                                            </li>
                                            <li>
                                                <h4 class="card-info-title">Location</h4>
                                                <span> @obj.RealEstate.Location.Name</span>
                                            </li>
                                            <li>
                                                <h4 class="card-info-title">Investor</h4>
                                                <span> @obj.RealEstate.ChuDauTu.Name</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Start of nav-->
        <div class="row">
            <div class="col-sm-12">
                <nav class="pagination-a">
                    <ul class="pagination justify-content-end">
                        @for (int i = 1; i <= Math.Ceiling((double)Model.TotalCount / Model.PageSize); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPageIndex ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Project", new { page = i })">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
        <!-- End of nav-->
    </div>
</section>
<!--/ Property Grid End /-->