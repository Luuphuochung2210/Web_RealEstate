@model Web_RealEstate.Models.Seller

@{
    ViewData["Title"] = "Agent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--/ Intro Single star /-->
<section class="intro-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">@Model.Name</h1>
                    @*<span class="color-text-a">Agent Immobiliari</span>*@
                </div>
            </div>
            <div class="col-md-12 col-lg-4">
                <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-area="" asp-controller="Home" asp-action="AllAgents">All Agents</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            @Model.Name
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!--/ Intro Single End /-->
<!--/ Agent Single Star /-->
<section class="agent-single">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="agent-avatar-box">
                            <img src="~/img/@Model.Image" alt="" class="agent-avatar img-fluid">
                        </div>
                    </div>
                    <div class="col-md-5 section-md-t3">
                        <div class="agent-info-box">
                            <div class="agent-title">
                                <div class="title-box-d">
                                    <h3 class="title-d">
                                        @Model.Name
                                    </h3>
                                </div>
                            </div>
                            <div class="agent-content mb-3">
                                <div class="info-agents color-a">
                                    <p>
                                        <strong>Phone: </strong>
                                        <span class="color-text-a"> @Model.Phone </span>
                                    </p>
                                    <p>
                                        <strong>Email: </strong>
                                        <span class="color-text-a"> @Model.Email</span>
                                    </p>
                                    <p>
                                        <strong>Address: </strong>
                                        <span class="color-text-a"> @Model.Address</span>
                                    </p>
                                </div>
                            </div>
                            <div class="socials-footer">
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <a href="#" class="link-one">
                                            <i class="fa fa-facebook" aria-hidden="true"></i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="#" class="link-one">
                                            <i class="fa fa-twitter" aria-hidden="true"></i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="#" class="link-one">
                                            <i class="fa fa-instagram" aria-hidden="true"></i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="#" class="link-one">
                                            <i class="fa fa-pinterest-p" aria-hidden="true"></i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="#" class="link-one">
                                            <i class="fa fa-dribbble" aria-hidden="true"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 section-t8">
                    <div class="title-box-d">
                        <h3 class="title-d">My Properties</h3>
                    </div>
                </div>
                <div class="row property-grid grid">
                    @foreach (var obj in Model.Posts)
                    {
                        @if (obj.SellerId == Model.Id)
                        {
                            <div class="col-md-4">

                                <div class="card-box-a card-shadow">
                                    <div class="img-box-a">
                                        <img src="~/img/@obj.RealEstate.Image" alt="" class="img-a img-fluid">
                                    </div>

                                    <div class="card-overlay">
                                        <div class="card-overlay-a-content">
                                            <div class="card-header-a">
                                                <h2 class="card-title-a">
                                                    <span>@obj.RealEstate.Name</span>
                                                </h2>
                                            </div>
                                            <div class="card-body-a">
                                                <div class="price-box d-flex">
                                                    <span class="price-a">@obj.RealEstate.Price</span>
                                                </div>
                                                <a asp-area="" asp-controller="Home" asp-action="Detail" asp-route-id="@obj.RealEstate.Id" class="link-a">
                                                    Click here to view
                                                    <span class="ion-ios-arrow-forward"></span>
                                                </a>
                                            </div>

                                            <div class="card-footer-a">
                                                <ul class="card-info d-flex justify-content-around">
                                                    <li>
                                                        <h4 class="card-info-title">Area</h4>
                                                        <span> @obj.RealEstate.DienTich</span>
                                                    </li>

                                                    <li>
                                                        <h4 class="card-info-title">Type</h4>
                                                        <span>@obj.RealEstate.Category.Name</span>
                                                    </li>
                                                    <li>
                                                        <h4 class="card-info-title">Location</h4>
                                                        <span> @obj.RealEstate.Location.Name</span>
                                                    </li>
                                                    <li>
                                                        <h4 class="card-info-title">Investor</h4>
                                                        <span> @obj.RealEstate.ChuDauTu.Name</span>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }


                </div>
            </div>
        </div>
    </div>
</section>
<!--/ Agent Single End /-->
